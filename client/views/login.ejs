<%- include('header'); %>
<%- include('./navs/nav'); %>

<section class="view">
      <div class="col-md-12">
        <div class="d-flex flex-column justify-content-center">
          <!-- Error & messages section -->
          <div>
            <% if(typeof  error !== 'undefined'){ %>
                <% if (typeof  error.error != 'undefined') { %>
                    <div class="alert alert-danger" role="alert">
                    <%= error.error %>
                    </div>
                <% } }
                if (typeof  success !== 'undefined') { %>
                    <div class="alert alert-success" role="alert">
                        <%= success.successMessage %>
                      </div>
               <% } %>
          </div>
            <!-- Login Form -->
                <form class="text-center border border-light p-5" method="POST" action="/login">
                    <p class="h4 mb-4">LOGIN</p>

                    <!-- Username -->
                    <div class="form-row mb-4">
                      <input type="text" name="username" class="form-control" placeholder="Username">
                      <% if(typeof  error !== 'undefined'){ %>
                          <div class="error-input">
                              <% if (typeof  error.username !== 'undefined') %>
                              <%= error.username %>
                          </div>
                      <% } %>
                    </div>

                    <!-- Password -->
                    <div class="form-row mb-4">
                      <input type="password" name="password" class="form-control" placeholder="Password" aria-describedby="defaultRegisterFormPasswordHelpBlock">
                      <% if(typeof  error !== 'undefined'){ %>
                          <div class="error-input">
                              <% if (typeof  error.password !== 'undefined') %>
                              <%= error.password %>
                          </div>
                      <% } %>
                    </div>
                    <!-- Sign up button -->
                    <button class="btn btn-info my-4 btn-block" type="submit">LOGIN</button>
                    <a href="/resetEmail">Forgot Password?</a>
                    <hr>
                    <!-- Register -->
                    <p>Don't Have An Account Yet? <a href="/signup">Register HERE</a></p>
                </form>
        </div>
      </div>
</section>


<%- include('footer'); %>